{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "lib": ["es2020", "DOM"],
    "types": ["@citizenfx/client", "@types/node", "@nativewrappers/client"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./**/*", "./../shared"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "semi": [true, "always"]
}